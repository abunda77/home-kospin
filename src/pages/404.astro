---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import { Icon } from 'astro-icon/components';

const title = `Error 404`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h1 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">404</span>
        </h1>
        <p class="mb-8 text-3xl font-semibold md:text-4xl">Page not found</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          We're sorry, but we couldn't find the page you're looking for.
        </p>
        <div class="flex justify-center space-x-4">
          <a
            rel="noopener noreferrer"
            href={getHomePermalink()}
            class="btn btn-primary"
          >
            <Icon name="tabler:home" class="w-5 h-5 mr-2" />
            Back to homepage
          </a>
          <a
            rel="noopener noreferrer"
            href="/contact"
            class="btn btn-outline"
          >
            <Icon name="tabler:mail" class="w-5 h-5 mr-2" />
            Contact support
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
