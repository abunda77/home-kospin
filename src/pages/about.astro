---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Tentang Koperasi Sinara Artha',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Tentang Kami"
    image={{
      src: '~/assets/images/heroimage.png',
      alt: 'Koperasi Sinara Artha Hero Image',
    }}
  >
    <Fragment slot="title">
      Solusi Keuangan Terpercaya bersama <br />
      <span class="text-accent dark:text-yellow-500 highlight">Koperasi Sinara Artha</span>
    </Fragment>

    <Fragment slot="subtitle">
      Koperasi Sinara Artha hadir sebagai mitra terpercaya dalam mewujudkan kesejahteraan finansial anggota. 
      Dengan fokus pada layanan simpanan, pinjaman, dan pemberdayaan ekonomi, 
      kami berkomitmen untuk memberikan solusi keuangan yang aman, menguntungkan, dan sesuai kebutuhan Anda.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Pencapaian Kami"
    stats={[
      { title: 'Anggota Aktif', amount: '1000+' },
      { title: 'Total Aset', amount: 'Rp 10M+' },
      { title: 'Tahun Pengalaman', amount: '5+' },
      { title: 'Tingkat Kepuasan', amount: '98%' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Produk Unggulan Kami"
    subtitle="Koperasi Sinara Artha menawarkan berbagai produk keuangan yang dirancang untuk memenuhi kebutuhan anggota."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Simpanan Berjangka',
        description:
          'Investasikan dana Anda dengan aman dan dapatkan imbal hasil yang menarik. Tersedia untuk jangka waktu 3, 6, 12, dan 24 bulan.',
        icon: 'tabler:coin',
      },
      {
        title: 'Pinjaman',
        description:
          'Dapatkan pinjaman dengan bunga kompetitif dan proses yang cepat untuk berbagai kebutuhan Anda.',
        icon: 'tabler:cash',
      },
      {
        title: 'Tabungan',
        description:
          'Simpan uang Anda dengan aman dan nikmati kemudahan akses serta bunga yang menguntungkan.',
        icon: 'tabler:coin',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Bunga Kompetitif',
        description:
          'Nikmati suku bunga simpanan hingga 9,25% per tahun untuk simpanan berjangka 24 bulan.',
        icon: 'tabler:chart-arrows',
      },
      {
        title: 'Proses Cepat',
        description:
          'Pengajuan dan pencairan dana yang cepat untuk memenuhi kebutuhan finansial Anda.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Layanan Prima',
        description:
          'Tim kami siap membantu Anda dengan pelayanan yang ramah dan profesional.',
        icon: 'tabler:user-check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Koperasi Sinara Artha Features Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Nilai-Nilai Kami"
    subtitle="Koperasi Sinara Artha beroperasi berdasarkan prinsip-prinsip yang menjunjung tinggi kepentingan anggota dan masyarakat."
    items={[
      {
        title: 'Kepercayaan',
        description:
          'Kami menjaga kepercayaan anggota dengan mengelola dana secara profesional dan transparan.',
      },
      {
        title: 'Pemberdayaan',
        description:
          'Kami berkomitmen untuk memberdayakan anggota melalui edukasi keuangan dan peluang pengembangan usaha.',
      },
      {
        title: 'Inovasi',
        description:
          'Kami terus berinovasi dalam layanan untuk memberikan solusi keuangan terbaik bagi anggota.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Pencapaian"
    subtitle="Perjalanan Koperasi Sinara Artha dalam melayani anggota dan masyarakat."
    isReversed={true}
    callToAction={{
      text: 'Bergabung Sekarang',
      href: '/',
    }}
    items={[
      {
        title: 'Pertumbuhan Anggota',
        description: 'Jumlah anggota kami terus bertambah, mencerminkan kepercayaan masyarakat terhadap layanan kami.',
        icon: 'tabler:users',
      },
      {
        title: 'Peningkatan Aset',
        description:
          'Total aset kami telah mencapai lebih dari Rp 10 Miliar, menunjukkan kekuatan finansial koperasi.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Kontribusi Sosial',
        description:
          'Kami aktif berkontribusi dalam program pemberdayaan ekonomi masyarakat dan kegiatan sosial.',
        icon: 'tabler:heart-handshake',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Informasi Kontak"
    subtitle="Hubungi kami untuk informasi lebih lanjut atau bantuan yang Anda perlukan."
    columns={2}
    items={[
      {
        title: 'Kantor Pusat',
        description:
          'Easten Park Residence Blok B7 No. 7, Sukolilo, Surabaya 60111',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Layanan Pelanggan',
        description:
          'Telepon: +62 87778715788<br>Email: cs@sinaraartha.com',
        icon: 'tabler:phone',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Legalitas"
    subtitle="Koperasi Sinara Artha beroperasi dengan izin resmi dan terdaftar secara legal."
    columns={2}
    items={[
      {
        title: 'Nomor Badan Hukum',
        description: 'AHU-0008619.AH.01.26 / 2021',
      },
      {
        title: 'Nomor Induk Berusaha (NIB)',
        description: '1285 000 320139',
      },
      {
        title: 'NPWP',
        description: '41.643.025.4-619.000',
      },
      {
        title: 'Jenis Koperasi',
        description: 'Koperasi Produsen dan Simpan Pinjam',
      },
    ]}
  />
</Layout>
